<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89e8e0">

    <Button
        android:id="@+id/Del_quest"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:background="#D14242"
        android:text="⌫"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Home"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#AC2B2B"
        android:text="⌂"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Add_quest"
        app:layout_constraintStart_toEndOf="@+id/Del_quest" />

    <Button
        android:id="@+id/Add_quest"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:background="#B61414"
        android:text="+"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>